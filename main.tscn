var pVelocity = Vector3.ZERO

func _physics_process(delta):
	var direction = Vector3.ZERO
	
	if Input.is_action_pressed(\"Forward\"):
		direction.z -= 1
	if Input.is_action_pressed(\"Backward\"):
		direction.z += 1
	if Input.is_action_pressed(\"SLeft\"):
		direction.x -= 1
	if Input.is_action_pressed(\"SRight\"):
		direction.x += 1
	
	direction = direction.rotated(Vector3(0, 0, 1), $Camera3D.rotation.x)
	direction = direction.rotated(Vector3(0, 0, 1), $Camera3D.rotation.y)
	
	
func _ready():
	$Camera3D.make_current()
	$Camera3D.rotation = Vector3(0,0,0)

func turnCamera(delta: float):
	if $Camera3D.rotation.x - delta < PI/2 && $Camera3D.rotation.x - delta > -PI/2:
		$Camera3D.rotate_x(-delta)
		
func getCam():
	return $Camera3D
"

